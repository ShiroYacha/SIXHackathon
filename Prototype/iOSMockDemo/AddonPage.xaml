<Page
    x:Class="iOSMockDemo.AddonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iOSMockDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ImageBrush x:Key="Background" ImageSource="/Assets/add_ons.png"/>
    </Page.Resources>
    <Canvas Background="{StaticResource Background}" Margin="0,-20,0,0">
        <Border Name="Back" Background="#C3CB00" Canvas.Left="12" Canvas.Top="24" Height="41" Width="133" Tapped="Back_Tapped" >
            <TextBlock VerticalAlignment="Top" FontFamily="Arial" FontSize="20" Foreground="White" Canvas.Left="154" Canvas.Top="126" Margin="11,11,2.333,-13.167" Height="43">Zurück</TextBlock>
        </Border>
        <Border Name="ShoppingCircleButton" Height="87" Background="Transparent" Width="400" Canvas.Top="125" />
        <Border Name="ParkingButton" Height="87" Background="Transparent" Width="400" Canvas.Top="216" />
        <Border Name="ClubbingButton" Height="87" Background="Transparent" Width="400" Canvas.Top="308" Tapped="ClubbingButton_Tapped"/>
    </Canvas>
</Page>
