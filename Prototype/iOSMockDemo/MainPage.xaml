 <Page
    x:Class="iOSMockDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iOSMockDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ImageBrush x:Key="Background" ImageSource="/Assets/p2p_index.png"/>
    </Page.Resources>
    <Canvas Background="{StaticResource Background}" Margin="0,-20,0,0">
        <Border Name="AddonButton" Height="87" Background="Transparent" Width="400" Canvas.Top="468" Tapped="AddonButton_Tapped"/>
    </Canvas>
</Page>
